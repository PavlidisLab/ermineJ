<!--
	Configuration for maven assembly plugin for binary distribution. To use this, run "mvn package assembly:assembly -Dbin-assemble"
	$Id$ 
-->
<assembly>
	<id>generic-bundle</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>true</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>bin/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>web</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>readme-generic.html</include>
			</includes>
		</fileSet>
		<fileSet>
			<includes>
				<include>LICENSE*</include>
			</includes>
		</fileSet>
	</fileSets>
	<binaries>
		<dependencySets>
			<dependencySet>
				<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
				<outputDirectory>lib</outputDirectory>
			</dependencySet>
		</dependencySets>
	</binaries>
</assembly>